.header
  .short-header
    .short-header-container
      .short-header-container_left
        .title
          = link_to image_tag("header_logo.png"), root_path, class: "title_logo"
        .home
          %details
            %summary
            %ul
              .trend
              .timeline
              .tag_feed
        .community
          %details
            %summary
            %ul
              .user_list
              .organizations
              .calendar
              .hr
              .qiitadon
              .hr
              .community_guide
              .manual
        .search
          .search_megane
          .search_input
            %input{ class: "messageform", placeholder: 'キーワードを入力', type: 'search'}
            / placeholderの記述が反映されない
      - if user_signed_in?
        .short-header-container_right
          .stock
          = link_to "", new_article_path, class: "postbutton"
          / .notification
          .login-user
            %details
              %summary
                .user_arrow
                = image_tag "profile.jpg", class: "profile_picture", size: "32x32"
              %ul
                .mypage
                .hr
                .draft
                .request
                .hr
                .setting
                .help
                .hr
                .logout
                  = link_to "", destroy_user_session_path, method: :delete
      - else
        .short-header-container_right
          .signin
          = link_to "", new_user_registration_path, class: "signup_button"
          .login
          = link_to "", new_user_session_path, class: "login_button"

