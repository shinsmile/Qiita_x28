.mypage-container
  .container-body
    .container-body-left
      .profile
        .profile__avatar
          - if @user.image.blank?
            = image_tag "no-image.png", class: "avatar", alt:""
          - else
            = image_tag "#{current_user.image}", class: "avatar", alt:"プロフ画"
          .profile__update
        .profile__my-name
          .full-name
            = @user.name
        .profile__tags-info
          .tag-header
            フォロー中のタグ
            - tags = []
            - for tagging in current_user.taggings
              - tags << tagging.tag.name
          %ul
            - tags.each do |tag|
              %li
                = tag

    .container-body-right
      .chart
      .chart-tab
        %ul
          %li
            .count
              - count = []
              - for article in @articles
                - if article.user == @user
                  - count << article.id
                  - number = count.length
              = number
            .count-title
              Items
          %li
            .count
              0
            .count-title
              Contribution
          %li
            .count
              0
            .count-title
              Followers
      .article-tab-like
        %ul
          %li
            = link_to '投稿一覧', user_path(id: @id), method: :get
          %li--like
            = link_to  'いいねした投稿', user_like_path(user_id: @id), method: :get
          %li
            = link_to '限定共有投', user_private_path(user_id: @id), method: :get
          %li
            = link_to 'コメント', user_commentpage_path(user_id: @id), method: :get
      .articles
        - @articles.each do |article|
          - article.likes.each do |like|
            - if like.user_id == @user.id
              .article_area
                .my_picture
                  - if article.user.image.blank?
                    = image_tag "no-image.png", size: "48x48", alt:""
                  - else
                    = image_tag "#{current_user.image}", size: "48x48", alt:"プロフ画"
                .article
                  .article__data
                    %span.author-name
                      = link_to article.user.name, "/#{article.user.name}", class: "author-name"
                    %span.date
                      が
                      = "#{article.created_at.strftime('%-m月%d日')}"
                      に投稿
                  .article__title
                    = link_to article.title, "/articles/#{article.id}", class: "title-text"
                  .article__tags
                    %ul
                    - article.tags.each do |tag|
                      %li
                        = link_to tag.name, "/tags/#{tag.name}", class: "tag-name"










