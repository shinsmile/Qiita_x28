- if user_signed_in?
  - if article.like_user(current_user.id)
    = button_to article_like_path(article.likes, article_id: article.id), method: :delete, id: "like-button", remote: true do
      .thumbs
        %a.likeCount
          %span{:tabindex => "-1"}
            = article.likes_count
          %i.fas.fa-thumbs-up
  - else
    = button_to article_likes_path(article), id: "like-button", remote: true do
      .thumbs
        %a.linkCount
          %span{:tabindex => "0"}
            = article.likes_count
          %i.fas.fa-check
- else
  .thumbs
    %a.likeCount
      %span{:tabindex => "0"}
        = article.likes_count
      %i.fas.fa-thumbs-up
