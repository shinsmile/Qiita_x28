- if tags.include?(@tag)
  - tags.delete(@tag)
  .btn
    = link_to user_path(name: current_user.name, email: current_user.email, tag: tags, this_tag: @tag), method: :patch, remote: true do
      = image_tag "unfollow_tag_off.png", class:"unfollow", alt:""
- else
  - tags << @tag
  .btn
    = link_to user_path(name: current_user.name, email: current_user.email, tag: tags, this_tag: @tag), method: :patch, remote: true do
      = image_tag "follow_tag_off.png", class:"follow", alt:""
